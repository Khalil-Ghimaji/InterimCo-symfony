{% extends 'base.html.twig' %}

{% block title %}
    Contrats{% if etat == "accepte" %}Acceptés
{% else %}{% if etat == "refuse" %}Refusés
{% else %}{% if etat == "en_cours_de_traitement" %}En cours de traitement
{% else %}{% if etat == "finalise" %}Finalisés{% endif %}
{% endif %}
{% endif %}
{% endif %}
{% endblock %}

{% block body %}
    {% include 'entete.twig' %}
    {% for flashMessage in app.flashes('success') %}
        <div class="alert alert-success">
            {{ flashMessage }}
        </div>
    {% endfor %}

    {% for flashMessage in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ flashMessage }}
        </div>
    {% endfor %}
    <h1 class="text-center">Liste des Contrats
        {% if etat == "accepte" %}Acceptés
        {% else %}{% if etat == "refuse" %}Refusés
        {% else %}{% if etat == "en_cours_de_traitement" %}En cours de traitement
        {% else %}{% if etat == "finalise" %}Finalisés{% endif %}
        {% endif %}
        {% endif %}
        {% endif %}
        </h1>

    {% if contrats is empty %}
        <div class="container">
            <div class="alert alert-info" role="alert">
                Aucun contrat trouvé pour cet état.
            </div>
        </div>
    {% else %}
        <div class="container">
            <table class="table table-striped">
                <thead class="thead-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Libellé</th>
                    <th scope="col">Date de soumission</th>
                    <th scope="col">Date de réponse</th>
                    <th scope="col">Prix (dinars)</th>
                    <th scope="col">Traiter Contrat</th>
                </tr>
                </thead>
                <tbody>
                {% for contrat in contrats %}
                    <tr>
                        <td>{{ contrat.id }}</td>
                        <td>{{ contrat.libelle }}</td>
                        <td>{{ contrat.dateSoumission|date('Y-m-d') }}</td>
                        <td>{{ contrat.dateReponse|date('Y-m-d') }}</td>
                        <td>{{ contrat.prix }}</td>
                        <td>
                            <form action="{{ path('traiter_contrat', {'id': contrat.id}) }}" method="post">
                                <button type="submit" class="btn btn-primary">
                                    {% if contrat.etatContrat == 'en_cours_de_traitement' %}
                                        Traiter Contrat
                                    {% else %}
                                        Détail Contrat
                                    {% endif %}
                                </button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
{% endblock %}
{% block javascripts %}

{% endblock %}
