{% extends 'base.html.twig' %}

{% block title %}Agents DRH{% endblock %}

{% block body %}

    <div class="container mt-5">
        {% for message in app.session.flashBag.get('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.session.flashBag.get('info') %}
            <div class="alert alert-info">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.session.flashBag.get('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}
        <h2 class="text-center">Gestion des Agents DRH </h2>
        <div class="mb-3">
            {{ form_start(filter,{'attr':{'class':'form-horizontal'}}) }}
            <div class="form-group row">
                <div class="col">
                    {{ form_row(filter.username) }}
                </div>
                <div class="col">
                    {{ form_row(filter.numeroTelephone) }}
                </div>

            </div>
            <div class="form-group row">
                <div class="col">
                    {{ form_row(filter.nom) }}
                </div>
                <div class="col">
                    {{ form_row(filter.prenom) }}
                </div>

            </div>
            <div class="row">
                {{ form_row(filter.email) }}
            </div>

            {{ form_rest(filter) }}
        </div>
    </div>
    <div class="container mt-5">
        <div class="d-flex justify-content-between">
            <h4>Liste des Agents DRH</h4>
            <a href="{{ path('app_agent_drh_new') }}" class="btn btn-success">Ajouter</a>
        </div>
        <table class="table mt-3">
            <thead>
            <tr>
                <th>Id</th>
                <th>Nom d'utilisateur</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Email</th>
                <th>Numero de téléphone</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for agent in agents %}
                <tr>
                    <td>{{ agent.id }}</td>
                    <td>{{ agent.username }}</td>
                    <td>{{ agent.nom }}</td>
                    <td>{{ agent.prenom }}</td>
                    <td>{{ agent.email}}</td>
                    <td>{{ agent.numeroTelephone }}</td>
                    <td><a href="{{ path('app_agent_drh_delete', {id:  agent.id} ) }}" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer l\'agent {{ agent.username}} ?')">Supprimer</a>
                    </td>
                </tr>
            {% else %}
                <td colspan="6"><h3>Pas d'agentsDRH dans la bd</h3></td>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
