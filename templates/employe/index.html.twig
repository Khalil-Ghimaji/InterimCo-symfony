{% extends 'base.html.twig' %}

{% block title %}Liste des employés{% endblock %}

{% block body %}
    <div class="container mt-5">
        {% for message in app.session.flashBag.get('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.session.flashBag.get('info') %}
            <div class="alert alert-info">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.session.flashBag.get('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}
        <h2 class="text-center">Gestion des Employes </h2>
        <div class="mb-3">
            {{ form_start(filter,{'attr':{'class':'form-horizontal'}}) }}
            <div class="form-group row">
                <div class="col">
                    {{ form_row(filter.competences) }}
                </div>
                <div class="col">
                    {{ form_row(filter.numeroTelephone) }}
                </div>

            </div>
            <div class="form-group row">
                <div class="col">
                    {{ form_row(filter.nom) }}
                </div>
                <div class="col">
                    {{ form_row(filter.prenom) }}
                </div>

            </div>
            <div class="row">
                {{ form_row(filter.email) }}
            </div>

            {{ form_rest(filter) }}
        </div>
    </div>
    <div class="container mt-5">
        <div class="d-flex justify-content-between">
            <h4>Liste des employés</h4>
            <a href="{{ path('app_employe_new') }}" class="btn btn-success">Ajouter</a>
        </div>
        <table class="table mt-3">
            <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Email</th>
                <th>Numero de téléphone</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for employe in employes %}
                <tr>
                    <td>{{ employe.id }}</td>
                    <td>{{ employe.nom }}</td>
                    <td>{{ employe.prenom }}</td>
                    <td>{{ employe.email}}</td>
                    <td>{{ employe.numeroTelephone }}</td>
                    <td><a href="{{ path('app_employe_delete', {id:  employe.id} ) }}" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer l\'employé {{ employe.nom}} {{ employe.prenom}} ?')">Supprimer</a>
                </tr>
            {% else %}
                <td colspan="6"><h3>Pas de employes dans la bd</h3></td>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
